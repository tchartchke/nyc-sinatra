<h2>Edit Figure</h2>

<form action="/figures/<%= @figure.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
Name: <input type="text" name="figure[name]" value="<%= @figure.name %>"id="figure_name">
<p>Titles: </p>
    <% Title.all.each do |title| %>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title)%>><%= title.name %><br>
    <% end %>

<p>Create new Title</p>
  Title: <input type="text" name="title[name]" id="new_title">

<p>Landmarks: </p>
<% Landmark.all.each do |landmark| %>
  <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark)%>> <%= landmark.name %> <br>
<% end %>

<p>Create new Landmark</p>
  Name: <input type="text" id="new_landmark" name="landmark[name]">
  Year Completed: <input type="text" name="landmark[year_completed]">

<input type="submit" value="Edit Figure" name="submit" id="submit">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
